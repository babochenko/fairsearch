{
  "manifest_version": 3,
  "name": "YouTube AI Filter",
  "version": "1.0",
  "description": "Filters YouTube search results using AI to compare video titles with the search query.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "./service_worker/sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/"],
      "js": ["./content_scripts/main.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "front/popup.html"
  },
  "icons": {
    "16": "front/icon16.png",
    "48": "front/icon48.png",
    "128": "front/icon128.png"
  },
  "options_page": "front/options.html"
}
